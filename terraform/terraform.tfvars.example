# ── Credentials ──
# Get from: https://console.tencentcloud.com/cam/capi
secret_id  = "your-secret-id-here"
secret_key = "your-secret-key-here"

# ── Region ──
region            = "ap-tokyo"
availability_zone = "ap-tokyo-2"

# ── Cluster ──
cluster_name    = "qgpu-demo"
cluster_version = "1.28.3"
cluster_cidr    = "10.244.0.0/16"

# ── Node Pool ──
instance_type      = "PNV5b.8XLARGE96"   # 1x NVIDIA L20 48GB, 32 vCPU, 96GB RAM
desired_node_count = 1

# ── Network ──
# Find at: https://console.tencentcloud.com/vpc
vpc_id    = "vpc-xxxxxxxx"
subnet_id = "subnet-xxxxxxxx"
bandwidth = 100

# ── SSH & Security ──
key_id              = "skey-xxxxxxxx"
my_ip               = "203.0.113.1/32"
security_group_name = "qgpu-demo-sg"

# ── Tags ──
tags = {
  project       = "qgpu-demo"
  TaggerAutoOff = "NO"
}
